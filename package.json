{
  "name": "vimrc-builder",
  "version": "1.0.0",
  "dependencies": {
    "react": "^16.6.3",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.6.3",
    "react-scripts": "^2.1.1",
    "styled-components": "^2.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "flow && react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy": "npx now && npx now alias set $(pbpaste) vimrc-builder.now.sh",
    "now-build": "yarn build && mv build dist"
  },
  "engines": {
    "node": ">=8"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "flow-bin": "^0.87.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,css}": [
      "prettier --write",
      "git add"
    ]
  }

}
